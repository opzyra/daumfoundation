{
  "singleQuote": true,
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 80,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react(.*)",
    "^next(.*)",
    "<THIRD_PARTY_MODULES>",
    "^src/components/(.*)",
    "^src/pages/(.*)",
    "^src/library/(.*)",
    "^src/service/(.*)",
    "^src/assets/(.*)",
    "^src/styles/(.*)",
    "^[../]/",
    "^[./]/"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": ["*.scss", "*.css"],
      "options": {
        "printWidth": 9999
      }
    }
  ]
}
